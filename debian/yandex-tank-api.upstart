description "Yandex.Tank HTTP API server"

script
    USER=$(cat /etc/yandex-tank-api/user || echo yandextankapi)
    install -o $USER -d /var/log/yandex-tank-api
    install -o $USER -d /var/lib/yandex-tank-api
    yandex-tank-api-server --log /var/log/yandex-tank-api/server.log --work-dir /var/lib/yandex-tank-api --daemon-uid $USER
end script

expect daemon

respawn

limit nofile 65535 65535

